<% if @aliases %>
  <% @aliases.each do |vhost_alias| %>
    server
    {
      listen 80;
      listen [::]:80;
      listen 443 ssl spdy;
      listen [::]:443 ssl spdy;

      server_name '<%= vhost_alias %>';

      ssl_certificate adblockplus.org_sslcert.pem;
      ssl_certificate_key adblockplus.org_sslcert.key;

      location /
      {
        rewrite .* https://<%= vhost %>/ redirect;
      }
    }
  <% end %>
<% end %>
