  {
    set $adblock_browser_android_store $adblock_browser_android_download;
  }

  if ($arg_link = "reporter_connect_issue")
  {
    rewrite ^ /forum/? redirect;
  }
  if ($arg_link = "reporter_other_link")
  {
    rewrite ^ /forum/? redirect;
  }
  if ($arg_link = "chrome_support")
  {
